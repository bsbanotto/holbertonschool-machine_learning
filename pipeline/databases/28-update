// mongosh script that adds a new attribute to a document in the collection `school`
// script should update only documents with name = "Holberton school"
// script should add the attribute `address` with value "972 Mission street"
db.school.update(
    { name: "Holberton school" },
    {
        $set: {
            address: "972 Mission street",
        }
    },
    {
        multi: true
    }
)